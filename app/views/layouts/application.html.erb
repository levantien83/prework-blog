<!DOCTYPE html>
<html>
	<head>
	  <title>Valentine's Blog</title>
	  <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-light bg-faded">
		  <a class="navbar-brand" href="/articles">Valentine's blog</a>
		  <ul class="nav navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="/articles">Home <span class="sr-only">(current)</span></a>
		    </li>
		    <li class="nav-item">
		      <a class="nav-link" href="#">About</a>
		    </li>
		    <li class="nav-item">
		      <a class="nav-link" href="#">Login</a>
		    </li>
		    <li class="nav-item">
		      <a class="nav-link" href="#">Logout</a>
		    </li>		    
		  </ul>

		  	<div align="right">
			  	<%= form_tag articles_path, :method => 'get' do %>
				<%= text_field_tag :search, params[:search] %>
				<%= submit_tag "Search" %>
				<% end -%>
			</div>

		  
		</nav>
		
		<%= yield %>

		<div class="container">
			<ul class="pager">    			   			
				<li class="pager-next"><a href="#">GitHub</a></li>
				<li class="pager-next"><a href="#">Twitter</a></li>    			
				<li class="pager-next"><a href="#">Facebook</a></li>
				<li class="pager-next"><a href="#">About</a></li>     			
	  		</ul>
		</div>
	</body>
</html>
