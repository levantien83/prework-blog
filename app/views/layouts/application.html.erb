<!DOCTYPE html>
<html>
	<head>
	  <title>Valentine's Blog</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		
		<%= render "header" %>
		<div class="row">
			<div class="col-md-3">				
			</div>
			<div class="col-md-8">
				<p class="notice"><%= notice %></p>
				<p class="alert"><%= alert %></p>
				<% if user_signed_in? %>
					<%= link_to 'New Article', new_article_path, class: 'btn btn-primary-outline btn-sm' %>	
				<% end -%>				
			</div>			
		</div><br>	
		<div class="row">
			<div class="col-md-3">
				<div class="container">
					<%= render "sidebar" %>
				</div>
			</div>
			<div class="col-md-8">
				<%= yield %>
			</div>			
		</div>		

		<%= render "footer" %>
		
	</body>
</html>
