<%= form_for([@article, @article.comments.build]) do |f| %>
	
	<div>	    
		<%= f.label :name %><br>
		<%= f.text_field :name, class: 'form-control' %>
    	<br>	    
		<%= f.label :body %><br>
		<%= f.text_area :body, class: 'form-control', rows: '3' %>
    	<br>	    
      	<%= f.submit %>
	    
  	</div>

<% end %>